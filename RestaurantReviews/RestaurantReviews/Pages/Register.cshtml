@page
@model RestaurantReviews.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout1";
}


<div class="form_container">
    <form>
        <div class="container">
            <h2 class="login_heading">Register</h2>
            <label for="uname">E-mail:</label>
            <input type="text" placeholder="Enter E-mail" name="uname" required>

            <label for="psw">Password:</label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <label for="psw">First Name:</label>
            <input type="password" placeholder="Enter First name" name="psw" required>

            <label for="psw">Last Name:</label>
            <input type="password" placeholder="Enter Last Name" name="psw" required>




        </div>
        <div class="login_buttons">
            <input type="submit" value="Register" class="loginbtn">
            <input type="reset" class="cancelbtn" value="Cancel">
        </div>
    </form>
</div>